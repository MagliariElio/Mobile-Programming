<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/ib_Hello"
        android:layout_width="300dp"
        android:layout_height="230dp"
        android:layout_marginTop="@dimen/top_ib_space"
        android:background="@null"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hello" />

    <TextView
        android:id="@+id/tv_Hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_tv_space"
        android:fontFamily="@font/fredoka_one"
        android:text="Hello! Click on me to start the game."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@id/ib_Hello"
        app:layout_constraintRight_toRightOf="@id/ib_Hello"
        app:layout_constraintTop_toBottomOf="@+id/ib_Hello"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>


